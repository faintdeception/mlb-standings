<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configure your MLB Glyph display"
        android:textSize="16sp"
        android:textColor="@color/secondary"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/favorite_team_setting"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/teamSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:background="@drawable/spinner_background" />

    <TextView
        android:id="@+id/lastUpdateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Never updated"
        android:textSize="14sp"
        android:textColor="@color/secondary"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Refresh Data"
        android:textColor="@color/white"
        android:background="@drawable/button_primary"
        android:layout_marginBottom="12dp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/testButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Test Glyph Display"
        android:textColor="@color/primary"
        android:background="@drawable/button_secondary"
        android:layout_marginBottom="24dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to use:\n• Short press Glyph Button to activate\n• Long press to cycle through modes:\n  - Team Record\n  - Top 5 Teams\n  - Division Standings"
        android:textSize="14sp"
        android:textColor="@color/secondary"
        android:lineSpacingMultiplier="1.2"
        android:padding="16dp"
        android:background="@drawable/info_background" />

</LinearLayout>
